generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model School {
  id        Int     @id @default(autoincrement())
  name      String
  address   String
  city      String  
  state     String
  contact   String   // store numbers as string (safer for long numbers)
  image     String   // URL or filename
  email_id  String   @unique
  createdAt DateTime @default(now())
}